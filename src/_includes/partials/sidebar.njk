<nav>
  <div class="site-masthead">
    <h2>{{siteInfo.designerName}}</h2>
    <p>{{siteInfo.designerTagline}}</p>
  </div>
  <ul class="sidebar-nav-link-section">


    {%- for portfolio in collections.portfolioSorted -%}
    <li><a href="{{portfolio.url}}">{{portfolio.data.title}}</a></li>
    <li>
      <ul>
        {%- for project in collections.projectSorted -%}
        {% if portfolio.data.subset in project.data.subset %}
        <li><a href="{{project.url}}">{{ project.data.title }}</a></li>
        {% endif %}

        {%- endfor -%}
      </ul>
    </li>
    {%- endfor -%}
    {%- for page in collections.pageSorted -%}
    <li><a href="{{page.url}}">{{ page.data.title }}</a></li>
    {%- endfor -%}
  </ul>


</nav>