{% extends "base.njk" %}
{% block main %}
<article>
  <h1>{{title}}</h1>
  {# places website content above the portfolio grid #}
  {{content | safe}}
  <section class="portfolio">
    {# select which portfolio layout to use #}
    {% if portfolio_type == "wide" %}
     {% include 'partials/portfolio-wide.njk' %}
     {% elif portfolio_type == "image-tile"  %}
      {% include "partials/portfolio-image-tile.njk" %}
     
      {% else %}
      {% include 'partials/portfolio-grid.njk' %}
        
    {% endif %}
    
    
  </section>
</article>

{% endblock %}