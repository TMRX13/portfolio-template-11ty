       <section class="portfolio custom-width custom-width-full">
      <nav class="portfolio-tile-container">
        {%- for project in collections.projectSorted -%}
        {% if subset in project.data.subset %}
        <a class="portfolio-tile" href="{{project.url}}">
       


            <img src="{{project.data.thumbnail}}" alt="{{project.data.title}}">
            <div class="portfolio-tile-text-overlay">
              <h2 href="{{project.url}}">{{ project.data.title }}</h2>
              {% if project.data.description_short %}
              <p>{{project.data.description_short}}</p>
              {% endif %}
              {% if project.data.description_medium %}
              <p>{{project.data.description_medium}}</p>
              {% endif %}

            </div>


        
        </a>
        {% endif %}
        {%- endfor -%}
      </nav>
      </section>